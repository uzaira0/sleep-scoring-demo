# =============================================================================
# Sleep Scoring Web Application - Environment Configuration
# =============================================================================
# Copy this file to .env and customize for your environment.
# IMPORTANT: Never commit .env to version control!

# =============================================================================
# Deploy Script Configuration (required for production)
# =============================================================================
APP_NAME=sleep-scoring
IMAGE_PREFIX=uzaira0/monorepo/sleep-scoring
HEALTH_URL=http://localhost:8500/health
HEALTH_TIMEOUT=120

# =============================================================================
# Database Configuration
# =============================================================================
# User and DB are hardcoded in docker-compose (sleep / sleep_scoring)
# Only password is required as env var
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# =============================================================================
# Port Configuration
# =============================================================================
# These ports are chosen to avoid conflicts with other monorepo services
# Modify if you have conflicts in your environment
POSTGRES_PORT=5434
BACKEND_PORT=8500
FRONTEND_PORT=8501

# =============================================================================
# Application Secrets
# =============================================================================
# App secret key (32+ chars) - generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CHANGE_ME_32_CHAR_RANDOM_STRING

# Shared site password for all users (leave empty to disable auth in dev)
# Set this to a secure password in production
SITE_PASSWORD=CHANGE_ME_SITE_PASSWORD

# API key for programmatic uploads (pipeline integration)
UPLOAD_API_KEY=CHANGE_ME_API_KEY

# Comma-separated admin usernames
ADMIN_USERNAMES=admin

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=https://your-domain.com

# =============================================================================
# Optional (defaults shown, uncomment to override)
# =============================================================================
# RATE_LIMIT_DEFAULT=100/minute
# DEBUG=false

# =============================================================================
# Development Settings (optional)
# =============================================================================
# Uncomment to enable hot reload for backend development
# BACKEND_RELOAD=true
